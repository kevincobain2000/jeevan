<div id="main" role="main">
  <%= render :partial =>"layouts/ribbon", :locals => {:papa => "Home", :son => "Search"} %>
  <!-- MAIN CONTENT -->
  <div id="content">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="well well-sm">
          <%= render :partial =>'layouts/search'%>
          <h1 class="font-md">
            Search Profiles,
            <span class="semi-bold">Found (<%= @profiles_paginate.length %> results)</span></h1>
        </div>
      </div>
      <div class="row">
        <% @profiles_paginate.each do |user_id| %>
          <div class="col-sm-12">
            <div class="well well-sm">
              <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12">
                  <div class="well well-light well-sm no-margin no-padding">
                    <div class="row">
                      <div class="col-sm-12">
                        <div class="col-sm-6">
                          <%= render :partial =>'layouts/avatar', :locals => {:user => @searched_profiles[user_id], :show_profile_flag => true} %>
                        </div>
                        <div class="col-sm-6">
                          <%= render :partial =>'layouts/cardinfo', :locals => {:user => user} %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
