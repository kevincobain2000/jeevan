<div id="main" role="main">
  <%= render :partial =>"layouts/ribbon", :locals => {:papa => "Home", :son => "Explore"} %>
  <!-- MAIN CONTENT -->
  <div id="content">
    <div class="row">
      <%#= render :partial =>'layouts/search'%>
      <%= link_to explore_path(:id => "search"), :class=>"btn btn-info pull-right" do %>
      <i class="fa fa-search"></i> Search Users
      <% end %>
    </div>
    <legend></legend>
    <div class="row">
      <% @profiles_paginate.each do |user_id| %>
        <div class="col-sm-6">
          <div class="well well-sm">
            <div class="row">
              <div class="col-sm-12 col-md-12 col-lg-12">
                <div class="well well-light well-sm no-margin divhover-light">
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="col-sm-5">
                        <%= render :partial =>'layouts/avatar', :locals => {:user => @profiles[user_id], :show_profile_flag => true} %>
                        </div>
                        <div class="col-sm-7">
                          <%= render :partial =>'layouts/cardinfo', :locals => {:user => @profiles[user_id]} %>
                          <%= render :partial =>'layouts/interestbutton', :locals => {:user => @profiles[user_id]} %>
                        </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <!-- end row -->
    <%= will_paginate @profiles_paginate, :class =>"flickr_pagination" %></div>
  <!-- END MAIN CONTENT -->
</div>
