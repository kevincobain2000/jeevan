<div id="features" class="features_page">
  <div class="container">
    <!-- Feature Wrapper -->
    <div class="feature_wrapper option3">
      <div class="section_header">
        <h2>Edit Profile
          <small>(Option 3)</small></h2>
      </div>
      <!-- Profiles Row -->
      <div class="row">
        <!-- Profile -->
        <div class="span6 feature">
          <div class="img">
            <%= image_tag("features-ico6.png") %>
          </div>
          <div class="text">
            <h6>db:profiles</h6>
            <div class="form">
              <%= form_tag :action=>'modify' do %>
              	<input type="hidden" placeholder="" name="model" value="profile">
                <legend>Gender</legend>
                <%= radio_button_tag(:sex, "Male") %>
                Male
                <%= radio_button_tag(:sex, "Female") %>
                Female
                <legend>Marital Status</legend>
                <%= radio_button_tag(:marital_status, "Never Married") %>
                Never Married
                <%= radio_button_tag(:marital_status, "Divorced") %>
                Divorced
                <legend>Posted By</legend>
                <%= radio_button_tag(:posted_by, "Self") %>
                Self
                <%= radio_button_tag(:posted_by, "Parent")%>
                Parent
                <%= radio_button_tag(:sex, "Friend") %>
                Friend
                <%= radio_button_tag(:sex, "Relative") %>
                Relative
                <legend>Date of Birth</legend>
                <input type="text" data-behaviour='datepicker' value="02/25/1985" style="width:200px;" required >
                <legend></legend>
                <%= submit_tag "Save", class: 'btn btn-success' %>
              <% end %>
            </div>
          </div>
        </div>
        <!-- Contact -->
        <div class="span6 feature">
          <div class="img">
            <%= image_tag("features-ico5.png") %>
          </div>
          <div class="text">
            <h6>db: Contact</h6>
            <div class="row form">
              <%= form_tag :action=>'modify' do %>
                <legend>Telephone Numbers</legend>
                <input type="hidden" placeholder="" name="model" value="contact">
                <input name="mother_no" type="text" placeholder="Mother (required)">
                <input name="father_no" type="text" placeholder="Father (required)">
                <input name="self_no" type="text" placeholder="Self (required)">
                <legend>Best Time to Contact</legend>
                From
                <div class="input-append bootstrap-timepicker">
                  <input class="timepicker" name="best_time_f" type="text" class="input-small">
                  <span class="add-on"><i class="icon-time"></i></span>
                </div>
                <br>
                To
                <div class="input-append bootstrap-timepicker">
                  <input class="timepicker" name="best_time_t" type="text" class="input-small">
                  <span class="add-on"><i class="icon-time"></i></span>
                </div>
                <legend>Address</legend>
					<textarea name="address" style="height:75px;width:100%;font-weight:bold;" placeholder="Address"></textarea>
                <legend></legend>
                <%= submit_tag "Save", class: 'btn btn-success' %>
              <% end %>
            </div>
          </div>
        </div>
        <!-- About Me -->
        <div class="span12 feature last">
          <div class="img">
            <%= image_tag("features-ico7.png") %>
          </div>
          <div class="text">
            <h6>About db:about</h6>
          <div class="text">
            <h6>db: Contact</h6>
            <div class="row form">
              <%= form_tag :action=>'modify' do %>
                <legend>Telephone Numbers</legend>
                <input type="hidden" placeholder="" name="model" value="about">
                <input name="mother_no" type="text" placeholder="Mother (required)">
                <input name="father_no" type="text" placeholder="Father (required)">
                <input name="self_no" type="text" placeholder="Self (required)">
                <legend>Best Time to Contact</legend>
                From
                <div class="input-append bootstrap-timepicker">
                  <input class="timepicker" name="best_time_f" type="text" class="input-small">
                  <span class="add-on"><i class="icon-time"></i></span>
                </div>
                <br>
                To
                <div class="input-append bootstrap-timepicker">
                  <input class="timepicker" name="best_time_t" type="text" class="input-small">
                  <span class="add-on"><i class="icon-time"></i></span>
                </div>
                <legend>Address</legend>
					<textarea name="me" style="height:75px;width:100%;font-weight:bold;" placeholder="Address"></textarea>
                <legend></legend>
                <%= submit_tag "Save", class: 'btn btn-success' %>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>