<div id="main" role="main">
  <%= render :partial =>"layouts/ribbon", :locals => {:papa => "Home", :son => "Profile"} %>
  <!-- MAIN CONTENT -->
  <div id="content">
    <!-- Bread crumb is created dynamically -->
    <!-- row -->
    <div class="row">
      <!-- col -->
      <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
        <h1 class="page-title txt-color-blueDark">
          <!-- PAGE HEADER -->
          <i class="fa-fw fa fa-file"></i>
          Profile Id
            <i class="fa fa-angle-right fa-lg"></i>
          <%= @user[:profile]['id'] %>
        </h1>
      </div>
      <!-- end col -->
      <!-- right side of the page with the sparkline graphs -->
      <!-- col -->
      <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8">
        <%= link_to edit_profile_path(:id =>current_user.profile.id), :class=>"btn btn-default pull-right" do %>
        <i class="fa fa-edit"></i> Edit My Profile
        <% end %>
      <%= link_to root_path, :class=>"btn btn-primary pull-right" do %>
        <i class="fa fa-copy"></i> Explore
        <% end %>
        <%= render :partial =>'layouts/sparks', :locals => {:user => @user}%>
      </div>
      <!-- end col -->
    </div>
    <!-- end row -->
    <!-- row -->
    <div class="col-sm-7 animated fadeInDown">
      <div class="well well-sm bg-color-white">
        <div class="row">
          <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="well well-light well-sm no-margin no-padding">
              <div class="row">
                <div class="col-sm-12">
                  <div class="row">
                    <div class="col-sm-12 col-md-12 col-lg-12">
                    <div class="col-sm-6">
                      <%= render :partial =>'layouts/avatar', :locals => {:user => @user}%>
                    </div>
                      <div class="col-sm-6">
                        <%= render :partial =>'layouts/cardinfo', :locals => {:user => @user}%>
                        <%= render :partial =>'layouts/interestbutton', :locals => {:user => @user}%>
                        <br>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <article class="col-xs-12 col-sm-6 col-md-6 col-lg-12">
            <h3 class="text-primary">About Me</h3>
            <%= raw @user[:about][:me] %>
          </article>
          <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <%= render :partial =>'layouts/profiles/show/religion'%>
          </article>
          <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <%= render :partial =>'layouts/profiles/show/kundali'%>
          </article>
          <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <%= render :partial =>'layouts/profiles/show/education'%>
          </article>
          <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <%= render :partial =>'layouts/profiles/show/family'%>
          </article>
          <article class="col-xs-12 col-sm-6 col-md-6 col-lg-12">
            <%= render :partial =>'layouts/profiles/show/hobby'%>
          </article>
          <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <%= render :partial =>'layouts/profiles/show/lifestyle'%>
          </article>
          <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <%= render :partial =>'layouts/profiles/show/desire'%>
          </article>
        </div>
      </div>
    </div>
    <%= render :partial => 'layouts/profiles/similar' %>
    <!-- end row -->
  </div>
  <!-- END MAIN CONTENT -->
</div>
