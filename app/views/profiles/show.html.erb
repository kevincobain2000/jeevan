<div id="main" role="main">
  <% if current_user.id == @user[:id] %>
    <%= render :partial =>"layouts/ribbon", :locals => {:papa => "Home", :son => "My Profile"} %>
  <% else %>
    <%= render :partial =>"layouts/ribbon", :locals => {:papa => "Home", :son => "Profile of #{@user[:name]}"} %>
  <% end %>

  <!-- MAIN CONTENT -->
  <div id="content">
    <!-- Bread crumb is created dynamically -->
    <!-- row -->
    <div class="row">
      <!-- col -->
      <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
        <h1 class="page-title txt-color-blueDark">
          <!-- PAGE HEADER -->
          <i class="fa-fw fa fa-file"></i>
          Profile Id
          <i class="fa fa-angle-right fa-lg"></i>
          <%= @user[:profile]['id'] %>
        </h1>
      </div>
    </div>
    <!-- end row -->
    <div class="row">
    <div class="col-sm-8 animated fadeInDown">
      <div class="well-sm bg-color-white">
        <div class="row">
          <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="well well-light well-sm no-margin no-padding">
              <div class="row">
                <div class="col-sm-12">
                  <div class="row">
                    <div class="col-sm-12 col-md-12 col-lg-12">
                      <div class="col-sm-6">
                        <%= render :partial =>'layouts/avatar', :locals => {:user => @user}%>
                      </div>
                      <div class="col-sm-6">
                        <%= render :partial =>'layouts/cardinfo', :locals => {:user => @user}%>
                      </div>
                      <div class="col-sm-6">
                      <% if  current_user.profile.id == @user[:profile][:id] %>
                        <button class="btn btn-xs btn-default" data-toggle="modal" data-target="#modal-edit-contact">
                          <i class="fa fa-edit"></i> edit contact
                        </button>
                        <% end %>
                        <%= render :partial =>'layouts/contactinfo', :locals => {:user => @user}%>
                      </div>
                      <div class="col-sm-6">
                        <legend></legend>
                        <%= render :partial =>'layouts/interestbutton', :locals => {:user => @user}%>
                        <legend></legend>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
        <article class="col-xs-12 col-sm-6 col-md-6 col-lg-12">
          <% if current_user.profile.id == @user[:profile][:id] %>
          <button class="btn btn-primary btn-xs pull-right" data-toggle="modal" data-target="#modal-edit-images">
            <i class="fa fa-edit"></i> Upload Images
          </button>
          <% end %>
        </article>
          <article class="col-xs-12 col-sm-6 col-md-6 col-lg-12">
            <h3>About
              <% if  current_user.profile.id == @user[:profile][:id] %>
              <button class="btn btn-xs btn-default" data-toggle="modal" data-target="#modal-edit-about">
                <i class="fa fa-edit"></i> edit
              </button>
              <% end %>
            </h3>
            <div class="wordwrap">
              <%= raw truncate(@user[:about][:me], length:500, escape:false) %>
            </div>
          </article>
          <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <%= render :partial =>'layouts/profiles/show/religion'%>
          </article>
          <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <%= render :partial =>'layouts/profiles/show/kundali'%>
          </article>
          <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <%= render :partial =>'layouts/profiles/show/education'%>
          </article>
          <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <%= render :partial =>'layouts/profiles/show/family'%>
          </article>
          <article class="col-xs-12 col-sm-6 col-md-6 col-lg-12">
            <%= render :partial =>'layouts/profiles/show/hobby'%>
          </article>
          <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <%= render :partial =>'layouts/profiles/show/lifestyle'%>
          </article>
          <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <%= render :partial =>'layouts/profiles/show/desire'%>
          </article>
        </div>
      </div>
    </div>
    <%= render :partial => 'layouts/profiles/similar', :locals => {:user => @user} %>
    </div>
    <!-- end row -->
  </div>
  <!-- END MAIN CONTENT -->
</div>


<!-- Modals -->
  <%= render :partial => 'layouts/profiles/edit/modaledit', :locals => {:id => "modal-edit-about", :tpl => "aboutme"} %>
  <%= render :partial => 'layouts/profiles/edit/modaledit', :locals => {:id => "modal-edit-images", :tpl => "images"} %>
  <%= render :partial => 'layouts/profiles/edit/modaledit', :locals => {:id => "modal-edit-religion", :tpl => "religion"} %>
  <%= render :partial => 'layouts/profiles/edit/modaledit', :locals => {:id => "modal-edit-kundali", :tpl => "kundali"} %>
  <%= render :partial => 'layouts/profiles/edit/modaledit', :locals => {:id => "modal-edit-education", :tpl => "education"} %>
  <%= render :partial => 'layouts/profiles/edit/modaledit', :locals => {:id => "modal-edit-family", :tpl => "family"} %>
  <%= render :partial => 'layouts/profiles/edit/modaledit', :locals => {:id => "modal-edit-hobby", :tpl => "hobby"} %>
  <%= render :partial => 'layouts/profiles/edit/modaledit', :locals => {:id => "modal-edit-lifestyle", :tpl => "lifestyle"} %>
  <%= render :partial => 'layouts/profiles/edit/modaledit', :locals => {:id => "modal-edit-desire", :tpl => "desire"} %>
  <%= render :partial => 'layouts/profiles/edit/modaledit', :locals => {:id => "modal-edit-avatar", :tpl => "avatar"} %>
  <%= render :partial => 'layouts/profiles/edit/modaledit', :locals => {:id => "modal-edit-contact", :tpl => "contact"} %>











