<div id="main" role="main">
    <%= render :partial =>
    "layouts/ribbon", :locals => {:papa => "Edit", :son => "Hobbies & Lifestyle"} %>
    <!-- MAIN CONTENT -->
    <div id="content">
        <div class="alert alert-block alert-info">
            <a class="close" data-dismiss="alert" href="#">Ã—</a>
            <h4 class="alert-heading">What to Do!</h4>
            <p>
                Please enter your <strong>Contact Details</strong>
                .
                You can enter same numbers for all fields. Your contact numbers will only be shown to users once you accept their interest. Otherwise are kept private..
            </p>
        </div>

        <!-- widget grid -->
        <section id="widget-grid" class="">

            <!-- row -->
            <div class="row">
                <!-- NEW WIDGET START -->
                <article class="col-sm-12 col-md-12 col-lg-6">
                    <!-- Widget ID (each widget will need unique ID)-->
                    <div class="jarviswidget" id="wid-id-4" data-widget-editbutton="false" data-widget-custombutton="false">
                        <header>
                            <span class="widget-icon"> <i class="fa fa-edit"></i>
                            </span>
                            <h2>Edit Family Details</h2>

                        </header>
                        <!-- widget div-->
                        <div>
                            <!-- widget content -->
                            <div class="widget-body">
                                <%= form_tag({:action=>
                                'modify_family'},{:remote => true, :class=>"smart-form"}) do %>
                                <header>About your family</header>

                                <fieldset>
                                       <section>
                                        <label class="label">Family Values</label>
                                        <div class="row">
                                            <% [ 'Liberal', 'Hypocrite' ].each do |values| %>
                                            <div class="col col-4">
                                            <label class="radio state-success">
                                            <%= radio_button_tag(:values, values,(@user[:family][:values] == values)) %>
                                            <i></i>
                                            <%= values %>
                                            </label>
                                            </div>
                                        <% end %>
                                        </div>
                                    <br>
                                        <label class="label">Family Size</label>
                                        <div class="row">
                                            <% [ 'Nuclear', 'Hypocrite' ].each do |size| %>
                                            <div class="col col-4">
                                            <label class="radio state-success">
                                            <%= radio_button_tag(:size, size,(@user[:family][:size] == size)) %>
                                            <i></i>
                                            <%= size %>
                                            </label>
                                            </div>
                                        <% end %>
                                        </div>
                                    <br>
                                    <br>
                                        <label class="label">Family Status</label>
                                        <div class="row">
                                            <% [ 'Rich', 'Middle' ].each do |status| %>
                                            <div class="col col-4">
                                            <label class="radio state-success">
                                            <%= radio_button_tag(:status, status,(@user[:family][:status] == status)) %>
                                            <i></i>
                                            <%= status %>
                                            </label>
                                            </div>
                                        <% end %>
                                        </div>
                                    <br>

                                </section>
                                <section>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                    <label>
                                        Family Income
                                    </label>
                                    <% range = [2,15] %>
                                    <% if  !@user[:family]['family_income'].nil? %>
                                        <% range = @user[:family]['family_income'].split(';') %>
                                    <% end %>
                                            <input id="family-income-slider" type="text" name="family_income" value="1;100" data-type="double" data-step="1" data-prefix="Rs " data-postfix=" Lac" data-from="<%= range[0] %>" data-to="<%= range[1] %>" data-hasgrid="true">
                                        </div>
                                    </div>
                                </div>
                                </section>

                                <section>
                                    <% categories = ["father", "mother", "brother", "sister"] %>
                                    <% categories.each do |category| %>
                                    <% heading = category.sub "_", " " %>
                                    <% id = category.sub "_", "-" %>
                                    <section class="col col-6">
                                        <label>
                                            <%= heading.capitalize %></label>
                                        <input type="text" id="select-<%= id %>" name="<%= category %>" class="selectized" value="<%= @user[:family][category] %>">
                                        </section>
                                    <% end %>
                                    </section>
                                </fieldset>
                                <footer>
                                    <div class="note note-success clicksave"></div>
                                    <button type="submit" class="btn btn-primary">Save</button>
                                    <button type="button" class="btn btn-default" onclick="window.history.back();">Back</button>
                                </footer>
                                <% end %></div>
                            <!-- end widget content --> </div>
                        <!-- end widget div --> </div>
                    </article>
                <article class="col-sm-12 col-md-12 col-lg-6">
<div class="jarviswidget" id="wid-id-2" data-widget-fullscreenbutton="true">

                        <header>
                            <span class="widget-icon"> <i class="fa fa-check txt-color-green"></i>
                            </span>
                            <h2>Edit Mode</h2>
                        </header>

                        <!-- widget div-->
                        <div>

                            <!-- widget edit box -->
                            <div class="jarviswidget-editbox">
                                <!-- This area used as dropdown edit box --> </div>
                            <!-- end widget edit box -->

                            <!-- widget content -->
                            <div class="widget-body no-padding">

                                <!-- Success states for elements -->
                                <!-- <form class="smart-form">
                                -->
                                <%= form_tag({:action=>'modify_education'}, {:remote => true, :class=>"smart-form"}) do %>
                                <header>Life</header>

                                <fieldset>
                                    <h4>Body Structure</h4>
                                   <% categories = ["school", "grad_college", "grad", "post_grad", "highest_degree"] %>
                                    <% categories.each do |category| %>
                                    <% heading = category.sub "_", " " %>
                                    <% id = category.sub "_", "-" %>
                                    <section class="col col-6">
                                        <label>
                                            <%= heading.capitalize %></label>
                                        <input type="text" id="select-<%= id %>" name="<%= category %>" class="selectized" value="<%= @user[:lifestyle][category] %>">
                                    </section>
                                    <% end %>


                                </fieldset>

                                <footer>
                                    <div class="note note-success clicksave"></div>
                                    <button type="submit" class="btn btn-primary">Save</button>
                                    <button type="button" class="btn btn-default" onclick="window.history.back();">Back</button>
                                </footer>
                                <!-- </form>
                                -->
                                <% end %>
                                <!--/ Success states for elements --> </div>
                            <!-- end widget content --> </div>
                        <!-- end widget div --> </div>


                    <!-- end widget --> </article>
            </section>
        </div>

    </div>
</div>