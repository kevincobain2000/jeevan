<div id="main" role="main">
    <%= render :partial =>
    "layouts/ribbon", :locals => {:papa => "Edit", :son => "Contact Details"} %>
    <!-- MAIN CONTENT -->
    <div id="content">
        <div class="alert alert-block alert-info">
            <a class="close" data-dismiss="alert" href="#">Ã—</a>
            <h4 class="alert-heading">What to Do!</h4>
            <p>
                Please enter your <strong>Contact Details</strong>.
                You can enter same numbers for all fields. Your contact numbers will only be shown to users once you accept their interest. Otherwise are kept private..
            </p>
        </div>

        <!-- widget grid -->
        <section id="widget-grid" class="">

            <!-- row -->
            <div class="row">
                <!-- NEW WIDGET START -->
                <article class="col-sm-12 col-md-12 col-lg-6">
    <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget" id="wid-id-3" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false">

                <header>
                    <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                    <h2>Edit Contact Information </h2>

                </header>

                <!-- widget div-->
                <div>

                    <!-- widget content -->
                    <div class="widget-body">
                        <p class="alert alert-info text-align-center">
                            Please follow the format:  <strong>(area code)-(5555)-(555)-(555)</strong>
                        </p>

                        <%= form_tag({:action=>'modify_contact'}, {:remote=>true, :class=>"smart-form"}) do %>

                            <fieldset>
                                <legend>
                                    Mobile or Fixed Line Numbers!
                                </legend>

                                <div class="form-group">
                                    <label>Phone masking</label>
                                    <div class="input-group">
                                        <input name="mother_no" class="form-control phone" type="text" value="<%= @user[:contact][:mother_no] %>">
                                        <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                                    </div>
                                    <p class="note">
                                        Data format (area code) 555-5555-555
                                    </p>
                                </div>

                                <div class="form-group">
                                    <label>Phone masking</label>
                                    <div class="input-group">
                                        <input name="father_no" class="form-control phone" type="text"  value="<%= @user[:contact][:father_no] %>">
                                        <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                                    </div>
                                    <p class="note">
                                        Data format (area code) 555-5555-555
                                    </p>
                                </div>

                                <div class="form-group">
                                    <label>Phone masking</label>
                                    <div class="input-group">
                                        <input name="self_no" class="form-control phone" type="text" required="true" value="<%= @user[:contact][:self_no] %>">
                                        <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                                    </div>
                                    <p class="note">
                                        Data format (area code) 555-5555-555
                                    </p>
                                </div>

                                </fieldset>
                                    <footer>
                                    <div class="note note-success clicksave"></div>
                                                                                <button class="btn btn-primary" type="submit">
                                                <i class="fa fa-save"></i>
                                                Save
                                            </button>
                                       <button type="button" class="btn btn-default" onclick="window.history.back();">Back</button>
                                        </footer>
                        <% end %>

                    </div>
                    <!-- end widget content -->

                </div>
                <!-- end widget div -->

            </div>
            <!-- end widget -->


                    </article>

            </section>
        </div>

    </div>
</div>