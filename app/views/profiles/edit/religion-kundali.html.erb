<div id="main" role="main">
    <%= render :partial =>
    "layouts/ribbon", :locals => {:papa => "Edit", :son => "Religion & Kundali"} %>
    <!-- MAIN CONTENT -->
    <div id="content">
        <div class="alert alert-block alert-info">
            <a class="close" data-dismiss="alert" href="#">Ã—</a>
            <h4 class="alert-heading">What to Do!</h4>
            <p>
                Please enter your <strong>Contact Details</strong>
                .
                You can enter same numbers for all fields. Your contact numbers will only be shown to users once you accept their interest. Otherwise are kept private..
            </p>
        </div>

        <!-- widget grid -->
        <section id="widget-grid" class="">

            <!-- row -->
            <div class="row">
                <!-- NEW WIDGET START -->
                <article class="col-sm-12 col-md-12 col-lg-6">
                    <!-- Widget ID (each widget will need unique ID)-->
                    <div class="jarviswidget" id="wid-id-4" data-widget-editbutton="false" data-widget-custombutton="false">
                        <header>
                            <span class="widget-icon"> <i class="fa fa-edit"></i>
                            </span>
                            <h2>Edit Religion</h2>

                        </header>
                        <!-- widget div-->
                        <div>
                            <!-- widget content -->
                            <div class="widget-body">
                                <%= form_tag({:action=>
                                'modify_religion'},{:remote => true, :class=>"smart-form"}) do %>
                                <header>Religion related information</header>

                                <fieldset>
                                    <% categories = ["religion", "mother_tongue", "caste", "sub_caste", "native_place"] %>
                                    <% categories.each do |category| %>
                                    <% heading = category.sub "_", " " %>
                                    <% id = category.sub "_", "-" %>
                                    <section class="col col-6">
                                        <label>
                                            <%= heading.capitalize %></label>
                                        <input id="select-<%= id %>" name="<%= category %>" value="<%= @user[:religion][category] %>" class="selectized" placeholder="Select or add new.."></section>
                                    <% end %>
                                </fieldset>
                                <footer>
                                    <div class="note note-success clicksave"></div>
                                    <button type="submit" class="btn btn-primary">Save</button>
                                    <button type="button" class="btn btn-default" onclick="window.history.back();">Back</button>
                                </footer>
                                <% end %></div>
                            <!-- end widget content --> </div>
                        <!-- end widget div --> </div>




 <!-- Widget ID (each widget will need unique ID)-->
                    <div class="jarviswidget" id="wid-id-5" data-widget-editbutton="false" data-widget-custombutton="false">
                        <header>
                            <span class="widget-icon"> <i class="fa fa-edit"></i>
                            </span>
                            <h2>Edit Kundali</h2>

                        </header>
                        <!-- widget div-->
                        <div>
                            <!-- widget content -->
                            <div class="widget-body">
                                <%= form_tag({:action=>
                                'modify_kundali'},{:remote => true, :class=>"smart-form"}) do %>
                                <header>Nakshatra, Moon Sign, Be precise with dates</header>

                                <fieldset>
                    <% categories = ["birth_country", "birth_city", "sun_sign", "moon_sign", "nakshatra"] %>
                                    <% categories.each do |category| %>
                                    <% heading = category.sub "_", " " %>
                                    <% id = category.sub "_", "-" %>
                                    <section class="col col-6">
                                        <label>
                                            <%= heading.capitalize %></label>
                                        <input id="select-<%= id %>" name="<%= category %>" value="<%= @user[:kundali][category] %>" class="selectized" placeholder="Select or add new.."></section>
                                    <% end %>
                                </fieldset>
                                <footer>
                                    <div class="note note-success clicksave"></div>
                                    <button type="submit" class="btn btn-primary">Save</button>
                                    <button type="button" class="btn btn-default" onclick="window.history.back();">Back</button>
                                </footer>
                                <% end %></div>
                            <!-- end widget content --> </div>
                        <!-- end widget div --> </div>






                    <!-- end widget --> </article>
            </section>
        </div>

    </div>
</div>