<%= render :partial =>'layouts/alert'%>
<div class="jarviswidget" id="wid-id-11">
  <header>
    <span class="widget-icon">
      <i class="fa fa-check txt-color-green"></i>
    </span>
    <h2>Edit Mode</h2>
  </header>
    <div>
    <div class="widget-body no-padding">
      <%= form_tag({:action=>'modify_education'}, {:remote => true, :class=>"smart-form"}) do %>
        <header>Education</header>
        <fieldset>
          <% categories = ["school", "grad_college", "graduation", "post_grad", "highest_degree"] %>
          <% categories.each do |category| %>
            <% heading = category.sub "_", " " %>
            <% id = category.sub "_", "-" %>
            <section class="col col-6">
              <label>
                <%= heading.capitalize %></label>
              <input type="text" id="select-<%= id %>" name="<%= category %>" class="selectized" value="<%= @user[:education][category] %>">
            </section>
          <% end %>
        </fieldset>
        <footer>
          <div class="note note-success clicksave"></div>
          <button type="submit" class="btn btn-primary">Save</button>
          <button type="button" class="btn btn-default" onclick="window.history.back();">Back</button>
        </footer>
      <% end %>
    </div>
    <!-- end widget content -->
  </div>
  <!-- end widget div -->
</div>