<%= render :partial =>'layouts/alert', :locals => {:heading => "Education Section", :description => "You can add your school or college if we don't have it in the list"}%>
<%= form_tag({:action=>'modify_education'}, {:remote => true, :class=>"smart-form"}) do %>
  <header>Education</header>
  <fieldset>
  <div class="col-sm-12">
    <% categories = ["school", "grad_college", "graduation", "post_grad", "highest_degree"] %>
    <% categories.each do |category| %>
      <% heading = category.sub "_", " " %>
      <% id = category.sub "_", "-" %>
      <div class="col-sm-12">
      <section>
        <label>
          <%= heading.capitalize %></label><small class="text-muted">
            (Add your item, if it is not in the list.)</small>
        <input type="text" id="select-<%= id %>" name="<%= category %>" class="selectized" value="<%= @user[:education][category] %>" placeholder="Choose or Add your <%= heading %>">
      </div>
      </section>
    <% end %>
  </div>
  </fieldset>
  <footer>
    <button type="submit" class="btn btn-primary">Save</button>
  </footer>
<% end %>
