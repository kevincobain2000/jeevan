<%= render :partial =>'layouts/alert', :locals => {:heading => "Basic Information about yourself ..", :description => "Basic information is shown on the profile card and appears when some does a search", :icon=>"fa fa-bookmark"}%>
<%= form_tag({:action=>'modify_profile'}, {:remote => true, :class=>"smart-form edit"}) do %>
  <h3 class="error-text-3"><strong>Basic</strong> Information</h3>
  <fieldset>
    <section>
      <label class="label">
        <strong>Home</strong> <span class="text-muted">Your Current Residential Location</span>
      </label>
        <input id="select-home" name="home" value="<%= @user[:profile][:home] %>" class="selectized">
    </section>
  </fieldset>
  <fieldset>
  <section>
      <label class="label"><strong>Marital</strong> Status</label>
      <div class="row">
        <div class="col col-4">
          <label class="radio">
            <%= radio_button_tag(:marital_status, "Never Married", (@user[:profile][:marital_status] == "Never Married")) %>
            <i></i>
            Never Married
          </label>
          <label class="radio">
            <%= radio_button_tag(:marital_status, "Divorced", (@user[:profile][:marital_status] == "Divorced")) %>
            <i></i>
            Divorced
          </label>
        </div>
        <div class="col col-4">
          <label class="radio">
            <%= radio_button_tag(:marital_status, "Filed Divorce", (@user[:profile][:marital_status] == "Filed Divorce")) %>
            <i></i>
            Filed Divorce
          </label>
          <label class="radio">
            <%= radio_button_tag(:marital_status, "Widowed", (@user[:profile][:marital_status] == "Widowed")) %>
            <i></i>
            Widowed
          </label>
        </div>
      </div>
      </section>
      <section>
      <label class="label"><strong>Profile</strong> Posted By</label>
      <div class="row">
        <div class="col col-4">
          <label class="radio">
            <%= radio_button_tag(:posted_by, "Self", (@user[:profile][:posted_by] == "Self")) %>
            <i></i>
            Self
          </label>
          <label class="radio">
            <%= radio_button_tag(:posted_by, "Parents", (@user[:profile][:posted_by] == "Parents")) %>
            <i></i>
            Parents
          </label>
        </div>
        <div class="col col-4">
          <label class="radio">
            <%= radio_button_tag(:posted_by, "Brother", (@user[:profile][:posted_by] == "Brother")) %>
            <i></i>
            Brother
          </label>
          <label class="radio">
            <%= radio_button_tag(:posted_by, "Sister", (@user[:profile][:posted_by] == "Sister")) %>
            <i></i>
            Sister
          </label>
        </div>

        <div class="col col-4">
          <label class="radio">
            <%= radio_button_tag(:posted_by, "Relatives", (@user[:profile][:posted_by] == "Relatives")) %>
            <i></i>
            Relatives
          </label>
          <label class="radio">
            <%= radio_button_tag(:posted_by, "Friends", (@user[:profile][:posted_by] == "Friends")) %>
            <i></i>
            Friends
          </label>
        </div>
      </div>
      </section>
  </fieldset>
  <footer>
    <button type="submit" class="btn btn-primary edit disabled">Save</button>
  </footer>
<% end %>
