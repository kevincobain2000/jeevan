<%= render :partial =>'layouts/alert', :locals => {:heading => "Tell us About Your Family", :description => "", :icon=>"fa fa-group"}%>
<%= form_tag({:action=>'modify_family'},{:remote => true, :class=>"smart-form edit"}) do %>
  <h3 class="error-text-3"><strong>Family</strong></h3>
  <fieldset>
  <section>
    <label class="label">Family <strong>Values</strong></label>
    <div class="row">
      <% [ 'Liberal', 'Hypocrite' ].each do |values| %>
        <div class="col col-4">
          <label class="radio">
            <%= radio_button_tag(:values, values,(@user[:family][:values] == values)) %>
            <i></i>
            <%= values %>
          </label>
        </div>
      <% end %>
    </div>
    </section>
    <section>
    <label class="label">Family <strong>Size</strong></label>
    <div class="row">
      <% [ 'Nuclear', 'Joint', 'Other' ].each do |size| %>
        <div class="col col-4">
          <label class="radio">
            <%= radio_button_tag(:size, size,(@user[:family][:size] == size)) %>
            <i></i>
            <%= size %>
          </label>
        </div>
      <% end %>
    </div>
    </section>
    <section>
    <label class="label">Family <strong>Status</strong></label>
    <div class="row">
      <% [ 'Rich', 'Upper Middle','Middle', 'Lower Middle', 'Other' ].each do |status| %>
        <div class="col col-4">
          <label class="radio">
            <%= radio_button_tag(:status, status,(@user[:family][:status] == status)) %>
            <i></i>
            <%= status %>
          </label>
        </div>
      <% end %>
    </div>
    </section>
  </fieldset>
  <fieldset>
    <div class="col-sm-12">
      <% categories = ["father", "mother", "brother", "sister", "family_income"] %>
      <% categories.each do |category| %>
        <% heading = category.sub "_", " " %>
        <% id = category.sub "_", "-" %>
        <div class="col-sm-6">
          <label class="label"><strong>
            <%= heading.titleize %></strong></label>
        
          </div>
          <div class="col-sm-6">
            <small class="text-muted">
            (Choose or Add New)</small>
          <input type="text" id="select-<%= id %>" name="<%= category %>" class="selectized" value="<%= @user[:family][category] %>" placeholder="About my <%= heading %>">
        </div>
      <% end %>
    </div>
  </fieldset>
  <footer>
    <button type="submit" class="btn btn-primary edit disabled">Save</button>
  </footer>
<% end %>
