<%= render :partial =>'layouts/alert', :locals => {:heading => "Load as many Images as you like", :description => "One image is worth a thousand words !",:icon=>"fa fa-picture-o"}%>
<h3 class=""><strong>Images</strong></h3>
<%= form_tag({:action=>'modify_image'}, {:authenticity_token => true, :multipart => true, :remote => true, :class => 'dropzone', :id => 'images-dropzone'}) do %>
<% end %>
<div class="row">
  <%= form_tag({:action=>'remove_image'}, {:remote => true, :class=>"smart-form"}) do %>
    <!-- SuperBox -->
    <div class="superbox col-sm-12">
      <% @user[:image].each do |image| %>
        <div class="superbox-list">
          <%= image_tag image.avatar.url(:thumb), {"data-img" => image.avatar.url(:thumb), :class => "superbox-img", :style=>"width:50px;height50px;","alt"=>"Edit this Image", :value=>image.id, :name=>"img", :id=>image.id} %>
        </div>
      <% end %>
      <input type="hidden" name="imageid" value="" id="imageid">
      <div class="superbox-float"></div>
    </div>
    <!-- /SuperBox -->
    <div class="superbox-show" style="height:300px; display: none"></div>
  <% end %>
</div>