<%= render :partial =>'layouts/alert', :locals => {:heading => "Load as many Images as you like", :description => "One image is worth a thousand words !",:icon=>"fa fa-picture-o"}%>
<%= form_tag({:action=>'modify_image'}, {:authenticity_token => true, :multipart => true, :remote => true, :style =>"height:300px;", :class => 'dropzone images-dropzone'}) do %>
<% end %>
  <%= form_tag({:action=>'remove_image', :controller => "profiles"}, {:remote => true, :class=>"smart-form"}) do %>
    <!-- SuperBox -->
    <div class="superbox col-md-12 text-center">
      <% current_user.images.all.each do |image| %>
        <div class="superbox-list friends-list">
          <%= image_tag image.avatar.url(:thumb), {"data-img" => image.avatar.url(:thumb), :class => "superbox-img", :style=>"width:100px;height100px;","alt"=>"Edit this Image", :value=>image.id, :name=>"img", :id=>image.id} %>
        </div>
      <% end %>
      <input type="hidden" name="imageid" value="" id="imageid">
      <div class="superbox-float"></div>
    </div>
    <!-- /SuperBox -->
    <div class="superbox-show" style="height:300px; display: none"></div>
  <% end %>