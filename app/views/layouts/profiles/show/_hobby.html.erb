<% categories = ['hobby', 'interest', 'music', 'read', 'dress', 'tv', 'movie', 'sports', 'cuisine', 'vacation'] %>
<dl class="dl-horizontal">
  <% categories.each do |category| %>
    <% heading = category.gsub "_", " " %>
    <dt><%= heading.capitalize %>:</dt>
    <dd><%= @user[:hobby][category] %></dd>
  <% end %>
</dl>
