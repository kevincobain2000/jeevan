<h3>Hobby
<% if current_user.profile.id == @user[:profile][:id] %>
  <button class="btn btn-xs btn-default" data-toggle="modal" data-target="#modal-edit-hobby">
    <i class="fa fa-edit"></i> edit
</button>
<% end %>
</h3>
<% categories = {'hobby' => "fa fa-plus", 'interest' => "fa fa-asterisk", 'music' => "fa fa-music", 'read' => "fa fa-book", 'dress' => "fa fa-group", 'tv' => "fa fa-coffee", 'movie' => "fa fa-desktop", 'sport' => "fa fa-gamepad" , 'cuisine' => "fa fa-globe", 'vacation' => "fa fa-map-marker"} %>
<dl class="dl-horizontal">
  <% categories.each do |category, icon| %>
  <% icon = "fa fa-angle-right" %>
    <% heading = category.gsub "_", " " %>
    <dt class="txt-color-blue"><%= heading.titleize %> <i class="<%= icon %>"></i></dt>
    <dd>
    <span>
    	<%= @user[:hobby][category].to_s.gsub ",", ", " %>
    </span>
    </dd>
  <% end %>
</dl>
