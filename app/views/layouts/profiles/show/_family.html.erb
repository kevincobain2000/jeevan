<% categories = {'values' => nil, 'size' => nil, 'status' => nil, 'family_income' => "Lacs", 'father' => nil, 'mother' => nil, 'brother' => nil, 'sister' => nil, 'profile_handler' => nil} %>
<dl class="dl-horizontal">
  <% categories.each do |category, post_fix| %>
    <% heading = category.gsub "_", " " %>
    <dt><%= heading.capitalize %>:</dt>
    <dd>
      <%= @user[:family][category].nil? ? @user[:family][category] : (@user[:family][category].gsub ";"," to ") %>
      <%= @user[:family][category].nil? ? "" : post_fix %>
    </dd>
  <% end %>
</dl>
