<h3>My Desired Partner
<% if current_user.profile.id == user[:profile][:id] %>
  <button class="btn btn-xs btn-default hidden-xs" data-toggle="modal" data-target="#modal-edit-desire">
    <i class="fa fa-edit"></i> edit
</button>
<% end %>
</h3>
<% categories = ['desired_height', 'desired_age', 'desired_marital_status', 'desired_country', 'desired_city', 'desired_religion', 'desired_caste', 'desired_mother_tongue', 'desired_manglik', 'desired_diet', 'desired_smoke', 'desired_drink', 'desired_complexion', 'desired_body', 'desired_challenged', 'desired_education', 'desired_occupation', 'desired_income'] %>
<dl class="dl-horizontal">
  <% categories.each do |category| %>
    <% heading = category.gsub "_", " " %>
    <dt class="txt-color-blue"><%= heading.titleize %> <i class="fa fa-angle-right fa-sm"></i></dt>
    <dd>
    <span>
    <%= user[:desire][category] %>
    </dd>
    </span>
  <% end %>
</dl>