<% if !user[:avatar].url.start_with?("/images/normal/") %>
  <h1><small>Profile Pic</small></h1>
  <a href="<%= user[:avatar].url(:original) %>" data-lightbox="roadtrip">
    <%= image_tag user[:avatar].url(:tiny), :style=>"width:45px;height:45px;" %>
  </a>
 <% end %>
<% if user[:image].count >= 1 %>
	<h1><small>Images (<%= user[:image].count %>)</small></h1>
<% end %>
  <% user[:image].each do |image| %>
  <a href="<%= image.avatar.url(:original) %>" data-lightbox="roadtrip">
    <%= image_tag image.avatar.url(:tiny) %>
  </a>
  <% end %>
<% if current_user.profile.id == @user[:profile][:id] %>
  <button class="btn btn-primary bg-color-pinkDark btn-md pull-right hidden-xs" data-toggle="modal" data-target="#modal-edit-images">
    <i class="fa fa-upload"></i>
    Upload more
  </button>
<% end %>