<% categories = ['diet', 'smoke', 'drink', 'complexion', 'body', 'challenged', 'blood', 'weight', 'residence', 'own_house', 'own_car', 'language', 'pet', 'hiv'] %>
<dl class="dl-horizontal">
  <% categories.each do |category| %>
    <% heading = category.gsub "_", " " %>
    <dt><%= heading.capitalize %>:</dt>
    <dd><%= @user[:lifestyle][category] %></dd>
  <% end %>
</dl>
