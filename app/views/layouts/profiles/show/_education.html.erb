<% categories = ['school', 'grad_college', 'graduation', 'desired_country', 'post_grad', 'post_grad_college', 'highest_degree'] %>
<dl class="dl-horizontal">
  <% categories.each do |category| %>
    <% heading = category.gsub "_", " " %>
    <dt class="text-muted"><%= heading.capitalize %>:</dt>
    <dd><strong><%= @user[:education][category].to_s.capitalize %></strong></dd>
  <% end %>
</dl>
