<% categories = ['religion', 'mother_toungue', 'caste', 'sub_caste', 'native_place'] %>
<dl class="dl-horizontal">
  <% categories.each do |category| %>
    <% heading = category.gsub "_", " " %>
    <dt><%= heading.capitalize %>:</dt>
    <dd><%= @user[:religion][category] %></dd>
  <% end %>
</dl>
