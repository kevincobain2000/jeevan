<h3>Religion
<% if  current_user.profile.id == @user[:profile][:id] %>
	<button class="btn btn-xs btn-default hidden-xs" data-toggle="modal" data-target="#modal-edit-religion">
		<i class="fa fa-edit"></i> edit
</button>
<% end %>
</h3>
<% categories = {'mother_tongue' => "fa fa-globe", 'caste' => "fa fa-bars", 'sub_caste' => "fa fa-arrows-v", 'native_place' => "fa fa-location-arrow"} %>
<dl class="dl-horizontal">
  <% categories.each do |category, icon| %>
  <% icon = "fa fa-angle-right" %>
    <% heading = category.gsub "_", " " %>
    <dt class="txt-color-blue"><%= heading.titleize %> <i class="<%= icon %>"></i></dt>
    <dd><span><%= @user[:religion][category] %></span></dd>
  <% end %>
</dl>