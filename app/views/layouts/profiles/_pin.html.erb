<!-- MAIN CONTENT -->
<div id="content"class="font-sm">
  <h1>
    <span class="semi-bold"><%= h %></span>
    <%= hsm %>
    <br>
    <small>total profiles</small>
    <strong>(<%= paginate.total_entries %>)</strong>
  </h1>
  <%= will_paginate paginate, :class =>"flickr_pagination"%>
  <legend></legend>
  <% if paginate.empty? %>
    <div class="error-box">
      <h3 class="text-center">
        <%= image_tag "logo.png" %>
        <br>
        SORRY
        <br><small>Currently no profiles in this section
          <a href="/">go and explore more profiles</a></small></h3>
    </div>
    <% else %>
  <div class="col-md-4 hidden-xs">
    <div class="well col-md-12">
      <%= render "layouts/profileprogress" %>
      <div class="col-md-6">
        <a class="btn-link" data-toggle="modal" data-target="#modal-edit-avatar">
          <%= image_tag current_user.avatar.url(:thumb), :class => "img-rounded", :style => "width:100px;height:100px;" %>
          <br>Change Picture
        </a>
        <h3><%= link_to current_user.name.capitalize, profile_path(:id => current_user.profile.id)%></h3>
        <p class="text-muted">
          <i class="fa fa-circle text-muted"></i>&nbsp;Online
        </p>
        <p class="text-muted">
          <i class="fa fa-user text-muted"></i>&nbsp;Premium Membership
        </p>
      </div>
      <div class="col-md-6">
        <h3>What's New</h3>
        <p>
          <i class="fa fa-envelope"></i>
          <% if  current_user.badge.message != 0%>
            <strong><%= pluralize(current_user.badge.message, "new message") %></strong>
          <% else %>
            <span class="text-muted"><%= pluralize(current_user.badge.message, "new message") %></span>
          <% end %>
        </p>
        <p>
          <i class="fa fa-thumbs-up"></i>
          <% if  current_user.badge.visitor != 0%>
            <strong><%= pluralize(current_user.badge.visitor, "new visitor") %></strong>
          <% else %>
            <span class="text-muted"><%= pluralize(current_user.badge.visitor, "new visitor") %></span>
          <% end %>
        </p>
        <p>
          <i class="fa fa-heart"></i>
          <% if  current_user.badge.interest != 0%>
            <strong><%= pluralize(current_user.badge.interest, "new interest") %></strong>
          <% else %>
            <span class="text-muted"><%= pluralize(current_user.badge.interest, "new interest") %></span>
          <% end %>
        </p>
      </div>
    </div>
    <div class="well col-md-12">
      <h3>You recently visited</h3>
      <% get_user_visited_user_ids(4).each do |uid| %>
        <% vuser = get_user_from_uid(uid) %>
        <%= link_to profile_path(:id => vuser.profile.id) do%>
          <%= image_tag vuser.avatar.url(:thumb), :class => "img-rounded", :style => "width:65px;height:65px;" %>
        <% end %>
      <% end %>
    </div>
    <div class="well col-md-12">
      <h3>People who viewed your profile</h3>
      <% get_visitors_user_ids(4).each do |uid| %>
        <% vuser = get_user_from_uid(uid) %>
        <%= link_to profile_path(:id => vuser.profile.id) do%>
          <%= image_tag vuser.avatar.url(:thumb), :class => "img-rounded", :style => "width:65px;height:65px;" %>
        <% end %>
      <% end %>
    </div>
    <div class="well col-md-12">
      <h3>My Saved Profiles<br><small>We do not notify user when you save their profile</small></h3>
      <% get_shortlist_user_ids(4).each do |uid| %>
        <% vuser = get_user_from_uid(uid) %>
        <%= link_to profile_path(:id => vuser.profile.id) do%>
          <%= image_tag vuser.avatar.url(:thumb), :class => "img-rounded", :style => "width:65px;height:65px;" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="col-md-8">
    <div id="blog">
      <% paginate.each_with_index do |_user, idx| %>
        <% if (idx+1)%3 == 0 || idx ==0%>
          <div class="row post_row">
          <% end %>
          <%= render :partial =>'layouts/card.html.erb', :locals => {:user => make_user_card(_user)} %>
          <% if (idx+1)%3 == 0 %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
<legend></legend>
<%= will_paginate paginate, :class =>"flickr_pagination"%>
