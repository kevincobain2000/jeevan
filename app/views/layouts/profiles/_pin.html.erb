
  <!-- MAIN CONTENT -->
  <div id="content"class="font-sm">
    <h1>
      <span class="semi-bold"><%= h %></span>
      <%= hsm %>
      <span>
        <% if defined? @solr  %> 
        found <%= number_with_delimiter(@solr.total) %> profiles
        <% end %>
      </span>
      </h1>
      <%= will_paginate paginate, :class =>"flickr_pagination"%>
      <legend></legend>
      <% paginate.each do |_user| %>
        <% user = make_user(_user) %>
        <div class="col-md-6 col-xs-12 well shadow-box">
          <div class="col-md-3 col-xs-6">
          <%= link_to profile_path(:id =>user[:profile][:id]), :class=>"" do %>
              <%= image_tag user[:avatar].url(:thumb), :class=>"", :style=>"width:100px;height:100px;" %>
            <% end %>
            <br>
            <%= render :partial =>'layouts/online', :locals => {:time => user[:updated_at]}%>
            <p class="text-muted">
              <%= user[:updated_at] %>
              ago</p>
            <%= render :partial =>'layouts/shortlistbutton', :locals => {:user => user} %>
            </div>
            <div class="col-md-5 col-xs-6">
              <%= render :partial =>'layouts/cardinfo', :locals => {:user => user} %>
              <%= render :partial =>'layouts/interestbutton', :locals => {:user => user} %>
              <%= render :partial =>'layouts/interesttext', :locals => {:user => user} %>
              <%= render :partial =>'layouts/interestact', :locals => {:user => user} %>
            </div>
            <div class="col-md-4 hidden-xs">
                        <% if user[:images_count] > 1 %>
                        <h1><small>Images</small></h1>
                        <% user[:image][0..6].each do |image| %>
                          <a href="<%= image.avatar.url(:original) %>" data-lightbox="roadtrip">
                            <%= image_tag image.avatar.url(:tiny) %>
                          </a>
                        <% end %>
                        <br>
                        <%= link_to profile_path(:id =>user[:profile][:id]), :class=>"pull-right" do %>
                        <%= user[:images_count] - 6 %> more images ..
                        <% end %>
                        <hr>
                        <% elsif user[:about][:me] %>

                        <h1><small>More about <%= (user[:sex] == "Female")? "Her": "Him" %></small>
                        </h1>
                        <div class="hidden-xs">
                          <span><%= raw truncate(user[:about][:me], length:200, escape:false) %></span>
                          <hr>
                        </div>
              <% end %> <!-- End if image count -->
            </div>
          </div>
          <% end %>
          <legend></legend>
          <%= will_paginate paginate, :class =>"flickr_pagination"%>
    </div>