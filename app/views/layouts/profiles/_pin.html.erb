<!-- MAIN CONTENT -->
<div id="content"class="font-sm">
  <h1>
    <span class="semi-bold"><%= h %></span>
    <%= hsm %>
    <small>about <%= number_with_delimiter(paginate.total_entries) %> profiles</small>
  </h1>
  <%= will_paginate paginate, :class =>"flickr_pagination"%>
  <legend></legend>
  <% if paginate.empty? %>
    <div class="error-box">
      <h3 class="text-center">
        <%= image_tag "logo.png" %>
        <br>
        SORRY
        <br><small>Currently no profiles in this section
          <a href="/">go and explore more profiles</a></small></h3>
    </div>
    <% else %>
  <%= render :partial =>'layouts/cardside.html.erb' %>
  <div class="col-md-8">
    <div id="blog">
      <% paginate.each_with_index do |_user, idx| %>
        <% if (idx+1)%3 == 0 || idx ==0%>
          <div class="row post_row">
          <% end %>
          <%= render :partial =>'layouts/card.html.erb', :locals => {:user => make_user_card(_user)} %>
          <% if (idx+1)%3 == 0 %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
<legend></legend>
<%= will_paginate paginate, :class =>"flickr_pagination"%>


<script type="text/javascript">
  $(document).ready(function($) {
    $("#scrolltofix").scrollToFixed({ marginTop: 100});
  });
</script>