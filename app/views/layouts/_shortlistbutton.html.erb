<% if  current_user.id != user[:id] && user[:shortlist].nil? %>
  <%= form_tag({:action=>'shortlist', :controller => "profiles"}, {:remote => true, :class=>"smart-form"}) do %>
    <%= hidden_field_tag 'to_user_id', user[:id] %>
    <button class="btn btn-xs btn-default interest" type="submit">
      <i class="fa fa-plus"></i>
      Shortlist
    </button>
  <% end %>
  <% elsif current_user.id != user[:id] %>
  <button class="btn btn-xs btn-default disabled"><i class="fa fa-check"></i> Shortlisted</button>
<% end %>
