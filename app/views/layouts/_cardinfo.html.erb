<h3>
  <i class="fa fa-file"></i> Profile of
  <span class="semi-bold">
    <%= user[:name] %></span>
  <br>
  <i class="fa fa-calendar"></i>
    <small class="text-muted">
      <span class="semi-bold"><%= user[:age] %></span> Years Old</small>
</h3>
<ul class="list-unstyled">
 <li>
    <p class="text-muted">
      <i class="fa fa-picture-o"></i>
      &nbsp;&nbsp;
      <strong>Images: </strong>
      <strong class="txt-color-blueDark"><%= user[:image].count %></strong>
    </p>
  </li>
  <li>
    <% items = {residence: [:lifestyle, 'fa-home'], caste: [:religion, 'fa-bars'], posted_by: [:profile, 'fa-user']  } %>
    <% items.stringify_keys.each do |key, value| %>
    <p class="text-muted">
      <i class="fa <%= value[1] %>"></i>
      &nbsp;&nbsp;
      <strong>
        <%= key.gsub('_', ' ').titleize %>:
      </strong>
       <strong class="txt-color-blueDark">
       <%= truncate(titleize(user[value[0]][key]), length: 10) %>
       </strong>
    </p>
    <% end %>
  </li>
</ul>

