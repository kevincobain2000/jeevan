<% if !user[:out_response].nil? %>
  <% if user[:out_response].response == 0 %>
      <strong class="txt-color-red"><i class="fa fa-thumbs-down"></i>
        Got Rejected</strong>
  <% elsif user[:out_response].response == 1 %>
      <strong class="txt-color-green"><i class="fa fa-check"></i>
<%= user[:name] %> Accepted</strong>
  <% else %>
      <strong class="txt-color-orange"><i class="fa fa-bell"></i>
        Waiting</strong>
  <% end %>
<% end %>
<% if !user[:in_response].nil? %>
  <% if user[:in_response].response == 0 %>

  <strong class="txt-color-red"><i class="fa fa-thumbs-down"></i> You have rejected</strong>
  <%= render :partial =>'layouts/acceptbutton.html.erb', :locals => {:user => user} %>

  <% elsif user[:in_response].response == 1 %>
      <strong class="txt-color-green"><i class="fa fa-check-square"></i>
        You have Accepted</strong>
        <%= render :partial =>'layouts/rejectbutton.html.erb', :locals => {:user => user} %>
  <% end %>
<% end %>
