<div class="span6 feature">
  <div class="img">
    <%= image_tag("features-ico5.png") %>
  </div>
  <div class="text">
    <h6>db: Religion</h6>
    <div class="row form">
      <%= form_tag :action=>'modify' do %>
        <input type="hidden" name="model" value="religion">
        <!-- Get the value from DB -->
        <select id="select-religion" name="religion" value="Other" class="selectized"></select>
        <select id="select-mother-tongue" name="mother_tongue" value="Other" class="selectized"></select>
        <select id="select-caste" name="caste" value="Other" class="selectized"></select>
        <select id="select-sub-caste" name="sub_caste" value="Other" class="selectized"></select>
        <select id="select-native-place" name="native_place" value="Other" class="selectized"></select>
        <%= submit_tag "Save", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>
