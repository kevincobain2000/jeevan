<div class="span7 feature">
  <div class="img">
    <h4>Religion</h4>
  </div>
  <div class="text">
    <div class="form">
      <%= form_tag({:action=>'modify_religion'},{:remote => true}) do %>
        <% categories = ["religion", "mother_tongue", "caste", "sub_caste", "native_place"] %>
        <% categories.each do |category| %>
          <h5>
            <% heading = category.sub "_", " " %>
            <%= heading.capitalize %>
            <small>(pick one)</small></h5>
          <% id = category.sub "_", "-" %>
          <input id="select-<%= id %>" name="<%= category %>" value="<%= @user[:religion][category] %>" class="selectized">
        <% end %>
        <button type="submit" class="btn btn-success pull-right hidden">
          Save
        </button>
      <% end %>
    </div>
  </div>
</div>
