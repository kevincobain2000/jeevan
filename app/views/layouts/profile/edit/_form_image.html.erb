<div class="span6 feature">
  <div class="form">
    <%= form_tag({:action=>'remove_image'}) do %>
      <button type="submit" id="remove-image" class="btn btn-danger">
        <i class="icon-trash"></i></button>
      <div class="flexslider">
        <ul class="slides">
          <% @images.each do |image| %>
            <li>
              <%= image_tag image.avatar.url(:original) %>
              <input type="hidden" name="id" value="<%= image.id %>">
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
