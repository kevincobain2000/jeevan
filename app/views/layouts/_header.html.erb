<header id="header">
  <div id="logo-group">
    <!-- PLACE YOUR LOGO HERE -->
    <span id="logo">
      <a href="/">
        <%= image_tag("logo.png") %>
      </a>
    </span>

    <span id="activity" class="activity-dropdown"> <i class="fa fa-user"></i> <b class="badge"><%= @notifications_unread_count %></b>
    </span>

    <!-- AJAX-DROPDOWN : control this dropdown height, look and feel from the LESS variable file -->
    <div class="ajax-dropdown">

      <!-- the ID links are fetched via AJAX to the ajax container "ajax-notifications" -->
      <div class="btn-group btn-group-justified">
        <label class="btn btn-default">
          Notifications</label>
        </div>

        <!-- notification content -->
        <div class="ajax-notifications bg-color-white">
          <%= render :partial =>'layouts/notification', :locals => {:notifications => @notifications} %>
          <legend></legend>
          <p class="text-center text-muted">No More Notifications</p>
        </div>
        <!-- end notification content -->

        <!-- footer: refresh area -->
        <span>
          Showing Last Week's Activity
          <%= link_to dashboard_index_path, :class=> "btn btn-xs btn-info pull-right" do %>See All Past Activity
          <i class="fa fa-dashboard"></i>
          <% end %>
        </span>
        <!-- end footer --> </div>
        <!-- END AJAX-DROPDOWN -->
      </div>
      <div id="project-context">
        <span class="label">Quick Navigation</span>
        <span id="project-selector" class="popover-trigger-element dropdown-toggle dropdown-large" data-toggle="dropdown"><i class="fa fa-search"></i> Search <i class="fa fa-angle-down"></i></span>

        <!-- Suggestion: populate this list with fetch and push technique -->
        <ul class="dropdown-menu">
          <li class="dropdown">
            <%= link_to explore_path(:id => 'search') do %>
            <i class="fa fa-search"></i> Search
            <% end %>
          </li>
          <li class="divider"></li>
          <h6>Profile</h6>
          <li>
            <%= link_to profile_path(:id =>current_user.profile.id) do %>
            <i class="fa fa-file"></i> My Profile
            <% end %>
          </li>
          <li>
            <%= link_to edit_profile_path(:id =>current_user.profile.id) do %>
            <i class="fa fa-edit"></i> Edit My Profile
            <% end %>
          </li>
          <li class="divider"></li>
          <h6>Dashboard</h6>
          <li>
            <%= link_to dashboard_index_path do %>
            <i class="fa fa-eye"></i> My Visitors
            <% end %>
          </li>
          <li>
            <%= link_to dashboard_index_path do %>
            <i class="fa fa-heart"></i> Interests
            <% end %>
          </li>
        </ul>
        <!-- end dropdown-menu-->

      </div>

      <!-- pulled right: nav area -->
      <div class="pull-right">

        <!-- collapse menu button -->
        <div id="hide-menu" class="btn-header pull-right">
          <span>
            <a href="javascript:void(0);" title="Collapse Menu">
              <i class="fa fa-bars"></i>
            </a>
          </span>
        </div>
        <!-- end collapse menu -->

        <!-- logout button -->
        <div id="logout" class="btn-header transparent pull-right">
          <span>
            <a href="<%= destroy_user_session_path %>
              " title="Sign Out">
              <i class="fa fa-sign-out"></i>
            </a>
          </span>
        </div>
        <!-- end logout button -->

        <!-- search mobile button (this is hidden till mobile view port) -->
<!--         <form action="#search.html" class="header-search pull-right">
          <input type="text" placeholder="Search by Profile Id" id="search-fld">
          <button type="submit">
            <i class="fa fa-search"></i>
          </button>
          <a href="javascript:void(0);" id="cancel-search-js" title="Cancel Search"><i class="fa fa-times"></i></a>
        </form> -->


        <ul class="header-dropdown-list hidden-xs">
          <li>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <i class="fa fa-gear"></i> <i class="fa fa-angle-down"></i> </a>
            <ul class="dropdown-menu pull-right">
              <li>
                <%= link_to edit_user_registration_path do %>
                <i class="fa fa-lock"></i> Change your password
                <% end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to contact_index_path do %>
                <i class="fa fa-smile-o"></i> Meet Us !
                <% end %>
              </li>
            </ul>
          </li>
        </ul>
      </div>

    </header>
<!-- END HEADER