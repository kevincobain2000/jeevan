<div class="col-sm-3 profile-pic">
  <%= image_tag user[:avatar].url(:thumb)%>
  <div class="padding-10">
    <h6 class="font-md">
      <label class="badge badge-info"><i class="fa fa-picture-o"></i> <%= user[:image].count %> Images</label>
    </h6>
      <% if defined? show_profile_flag %>

      <%= link_to 'Show Profile', profile_path(:id =>user[:profile][:id]), :class=> "btn btn-default"%>
      <% end %>
  </div>
</div>
