<div class="col-sm-6 profile-pic">
  <%= image_tag user[:avatar].url(:thumb)%>
  <br>
  <% if user[:updated_at].include? "minute" %>
    <i class="txt-color-greenLight fa fa-sm fa-circle"></i> <small><strong>Online</strong></small>
  <% else %>
    <small><strong>Offline</strong></small>
  <% end %>
  <br>
  <span class="text-muted font-xs"> <%= user[:updated_at] %> ago</span>
  <br>
  <strong><%= number_with_delimiter(user[:visitors].to_i, :delimeter => ',') %></strong><span class="text-muted font-xs"> view(s)</span>
  <div class="padding-10">
      <% if defined? show_profile_flag %>

      <%= link_to profile_path(:id =>user[:profile][:id]), :class=> "btn btn-primary btn-xs" do %>
      <i class="fa fa-eye"></i> Show Profile
      <% end %>
      <% end %>
  </div>
</div>
